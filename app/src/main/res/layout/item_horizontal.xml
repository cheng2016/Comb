<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:minHeight="@dimen/widget_size_70"
    android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/top_indicator"
            android:layout_width="@dimen/widget_size_55"
            android:layout_height="10dp"
            android:background="@drawable/rectangle_yellow"
            android:layout_marginRight="@dimen/widget_size_3"
            android:layout_marginLeft="@dimen/widget_size_3"
            android:orientation="horizontal" />

        <View
            android:id="@+id/bottom_indicator"
            android:layout_width="@dimen/widget_size_55"
            android:layout_height="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/top_indicator"
            android:layout_marginRight="@dimen/widget_size_3"
            android:layout_marginLeft="@dimen/widget_size_3"
            android:background="@drawable/rectangle_red"
            android:orientation="horizontal" />

        <View
            android:id="@+id/line"
            android:layout_width="@dimen/widget_size_60"
            android:layout_below="@+id/bottom_indicator"
            android:layout_marginTop="@dimen/widget_size_5"
            android:layout_height="@dimen/widget_size_3"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/index_tv"
            android:layout_width="@dimen/widget_size_18"
            android:layout_height="@dimen/widget_size_18"
            android:layout_below="@+id/line"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_3"
            android:layout_marginBottom="@dimen/widget_size_3"
            android:text="2"
            android:textSize="12sp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:background="@drawable/shape_circle"
            android:layout_gravity="center_horizontal"/>

        <View
            android:layout_width="@dimen/widget_size_10"
            android:layout_height="@dimen/widget_size_10"
            android:layout_marginLeft="@dimen/widget_size_60"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_circle_black" />
    </RelativeLayout>
</LinearLayout>