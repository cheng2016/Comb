<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp">

        <TextView
            android:id="@+id/index"
            android:layout_width="24dp"
            android:layout_height="66dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/shape_index"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/top_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/btn_red" />

        <ImageView
            android:id="@+id/bottom_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@+id/top_img"
            android:layout_alignLeft="@+id/top_img"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@mipmap/btn_ir1" />

        <EditText
            android:id="@+id/mw_top_editText"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/top_img"
            android:layout_toRightOf="@+id/top_img"
            android:background="@drawable/shape_edit"
            android:gravity="center"
            android:inputType="number"
            android:text="10"
            android:textColor="@android:color/holo_red_dark" />

        <EditText
            android:id="@+id/time_top_editText"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/mw_top_editText"
            android:layout_toRightOf="@+id/mw_top_editText"
            android:background="@drawable/shape_edit"
            android:gravity="center"
            android:inputType="number"
            android:text="10"
            android:textColor="@android:color/holo_red_dark" />

        <EditText
            android:id="@+id/mw_bottom_editText"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_below="@+id/mw_top_editText"
            android:layout_alignStart="@+id/mw_top_editText"
            android:layout_alignLeft="@+id/mw_top_editText"
            android:layout_marginTop="28dp"
            android:background="@drawable/shape_edit"
            android:gravity="center"
            android:inputType="number"
            android:text="10"
            android:textColor="@android:color/holo_red_dark" />

        <EditText
            android:id="@+id/time_bottom_editText"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_below="@+id/time_top_editText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@+id/mw_bottom_editText"
            android:layout_toRightOf="@+id/mw_bottom_editText"
            android:background="@drawable/shape_edit"
            android:gravity="center"
            android:inputType="number"
            android:text="10"
            android:textColor="@android:color/holo_red_dark" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            app:srcCompat="@mipmap/btn_delete" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:srcCompat="@mipmap/btn_add" />

</FrameLayout>