<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <include layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_loading"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_loading"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Mode"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/model_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="1"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Repeat"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/repeat_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="5"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="66dp"
                android:layout_marginRight="20dp"
                android:text="Rule 1"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="40dp">

                <EditText
                    android:id="@+id/ir_edit"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="10"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/ir_time_edit"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="20"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="40dp">

                <EditText
                    android:id="@+id/red_edit"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="20"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/red_time_edit"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="30"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="66dp"
                android:layout_marginRight="20dp"
                android:text="Rule 2"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="40dp">

                <EditText
                    android:id="@+id/ir_edit2"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="30"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/ir_time_edit2"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="40"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="40dp">

                <EditText
                    android:id="@+id/red_edit2"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="40"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/red_time_edit2"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="50"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <Button
                android:id="@+id/xiafa_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginRight="30dp"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/widget_size_10"
                android:text="Issue instruction" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Model"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/query_model_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="1"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <Button
                android:id="@+id/query_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="@dimen/widget_size_10"
                android:textAllCaps="false"
                android:text="query" />

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_240"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="ble_disconnect"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>